{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "types": [
      "@testing-library/jest-dom"
    ],
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.tsx",
    "**/*.tsx",
    "**/*.tsx",
    ".next/types/**/*.tsx",
    ".next/types/**/*.ts",
    "src/config/environment.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}